<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <NoWarn>1701;1702;SA0001</NoWarn>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <WarningsAsErrors />
    <DocumentationFile>bin\Release\netstandard2.0\DotNetDocs.xml</DocumentationFile>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DocumentationFile>bin\Debug\netstandard2.0\DotNetDocs.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="netstandard2.0\**" />
    <EmbeddedResource Remove="netstandard2.0\**" />
    <None Remove="netstandard2.0\**" />
  </ItemGroup>
  
  <ItemGroup>
    <None Remove="stylecop.json" />
  </ItemGroup>

  <ItemGroup>
    <AdditionalFiles Include="stylecop.json" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Mono.Cecil" Version="0.10.0" />
    <PackageReference Include="StyleCop.Analyzers" Version="1.1.0-beta008" />
    <PackageReference Include="System.Reflection.Metadata" Version="1.6.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\ICSharpCode.Decompiler\ICSharpCode.Decompiler.csproj" />
  </ItemGroup>
  
  <PropertyGroup>
    <GenerateMarkdownApiDocs Condition=" '$(GenerateMarkdownApiDocs)' == '' ">true</GenerateMarkdownApiDocs>
  </PropertyGroup>

  <PropertyGroup Condition="$(DocumentationRootFolder) == ''">
    <DocumentationRootFolder Condition="$(OutputPath) != ''">$(OutputPath)docs</DocumentationRootFolder>
  </PropertyGroup>

  <PropertyGroup Condition="'$(OutputPath)|$(DocumentationRootFolder)' == '|'">
    <DocumentationRootFolder>bin\$(Configuration)\</DocumentationRootFolder>

    <DocumentationRootFolder Condition="$(AppendTargetFrameworkToOutputPath) != 'false'">$(DocumentationRootFolder)$(TargetFramework)\</DocumentationRootFolder>

    <DocumentationRootFolder>$(DocumentationRootFolder)docs</DocumentationRootFolder>

    <DocumentationRootFolder>$(SolutionDir)..\docs</DocumentationRootFolder>
  </PropertyGroup>

  <Target Name="GenerateDocumentation" AfterTargets="Build" Condition=" '$(GenerateMarkdownApiDocs)' == 'true' ">
    <Exec Command="dotnet $(SolutionDir)DotNetMDDocs\bin\$(Configuration)\netcoreapp2.1\DotNetMDDocs.dll --assembly-path $(TargetPath) --document-path $(DocumentationRootFolder)" LogStandardErrorAsError="true" />
  </Target>

</Project>
